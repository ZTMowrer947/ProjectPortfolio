{
    "hosting": {
        "public": "public",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "**",
                "function": "nextFunc"
            }
        ],
        "redirects": [
            {
                "source": "/",
                "destination": "/projects",
                "type": 301
            }
        ]
    },
    "functions": {
        "source": ".",
        "predeploy": ["yarpm --prefix \"$PROJECT_DIR\" install", "yarpm --prefix \"$PROJECT_DIR\" run build"]
    }
}
